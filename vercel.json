{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "frontend/index.html", "use": "@vercel/static" }
  ],
  "functions": {
    "api/index.py": { "runtime": "python3.11" },
    "api/flower-check.py": { "runtime": "python3.11" }
  },
  "routes": [
    { "src": "/api/index", "dest": "/api/index.py" },
    { "src": "/api/flower-check", "dest": "/api/flower-check.py" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
